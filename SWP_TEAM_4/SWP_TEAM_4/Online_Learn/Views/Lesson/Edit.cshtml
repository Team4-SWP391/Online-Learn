@model Online_Learn.Models.Lesson

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/css/lesson-add.css">
	<br />
<div class="container my-5">
		<div class="main-body ">
            
			<div class="row">
				<div class="col-lg-4">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
								<img src="~/img/Exams-bro.svg" alt="Admin" height="350px">
								<div class="mt-3">
									<h4 style="color: #941eb8;">Udemy Lesson</h4>
									<p class="text-secondary mb-1">Online learning</p>
									<p class="text-muted font-size-sm">Learn to successful, learning is easier with Udemy.</p>
								</div>
								<hr class="my-4">
								<ul class="list-group list-group-flush">
									<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
										<h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe me-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Website</h6>
										<span class="text-secondary">https://Udemy.com</span>
									</li>
									<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
										<h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github me-2 icon-inline"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>Github</h6>
										<span class="text-secondary">Team4-SWP391/Online-Learn</span>
									</li>
									<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
										<h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter me-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
										<span class="text-secondary">@@Udemy</span>
									</li>
									<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
										<h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram me-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</h6>
										<span class="text-secondary">@@Udemy</span>
									</li>
									<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
										<h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook me-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
										<span class="text-secondary">@@Udemy</span>
									</li>
								</ul>
								</div>
							
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="card">
						<div class="card-body">
							<div class="row">
								<h1 style="text-align:center; color: #ae30d5;">Edit Lesson</h1><hr>
							</div>
							<form asp-action="Edit">
								<input type="hidden" asp-for="LessonId" />

								<div class="row mb-4 my-3">
									<div class="col-sm-2 offset-1">
										<label asp-for="LessonName" class="mb-0"><h5>Lesson Name</h5></label>
									</div>
									<div class="col-sm-8 text-secondary">   
										<input  asp-for="LessonName" type="text" class="inputt form-control" style="border: 1px solid grey;">
									</div>
								</div>
								<div class="row mb-4">
									<div class="col-sm-2 offset-1">
										<label asp-for="Video" class="mb-0"><h5>Video</h5></label>
									</div>
									<div class="col-sm-8 text-secondary">
										<input asp-for="Video" type="text" class=" inputt form-control" style="border: 1px solid grey;">
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-2 offset-1">
										<label asp-for="Main" class="mb-0"><h5>About Lesson</h5></label>
									</div>
									<div class="col-sm-8 text-secondary">
										<textarea asp-for="Main" class="inputt form-control" rows="4" style="border: 1px solid grey;"></textarea>
									</div>
								</div>
								<div class="row mb-3" hidden>
									<div class="col-sm-2 offset-1">
										<label class="mb-0" asp-for="LectureId"><h5>Lecture id</h5></label>
									</div>
									<div class="col-sm-8 text-secondary">
										<select asp-for="LectureId" asp-items="ViewBag.LectureId" type="number" class="form-control" style="border: 1px solid black; width: 150px;"></select>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-sm-3"></div>
									<div class="col-sm-9 text-secondary">
										<button class="btn btn-dark"> <h4>Update</h4></button>
									</div>
								</div>
							</form>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-12">
							<div class="card">
								<div class="card-body">
									<h4 class="d-flex align-items-center mb-3" style="color: #941eb8;">Lesson Status</h4>
									<p>Exam Content</p>
									<div class="progress mb-3" style="height: 5px">
										<div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p>Connect Course</p>
									<div class="progress mb-3" style="height: 5px">
										<div class="progress-bar bg-danger" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p>Video Learning</p>
									<div class="progress mb-3" style="height: 5px">
										<div class="progress-bar bg-success" role="progressbar" style="width: 89%" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p>Lesson Quality</p>
									<div class="progress mb-3" style="height: 5px">
										<div class="progress-bar bg-warning" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p>Feedback</p>
									<div class="progress" style="height: 5px">
										<div class="progress-bar bg-info" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


