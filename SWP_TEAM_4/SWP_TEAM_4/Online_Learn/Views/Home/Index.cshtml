    <div class="home-content">
        <h2 class="home-content__heading mb-3">
            Because you viewed"<span class="heading-course">
                @ViewBag.course_rcm
            </span>"
        </h2>
        <div class="home-course__list">
            @foreach (Course item in ViewBag.list1)
            {
                <div class="home-course">
                    <div class="home-course__image">
                        <a href="/Course/Details?id=@item.CourseId">
                            <img src="@item.Image" alt="">
                        </a>
                    </div>
                    <div class="home-course__content">
                        <span class="course-name">@item.CourseName</span><br>
                        <span class="course-author">@item.Account.FulllName</span><br>
                        <span class="course-rp">
                            <span>4.6</span>
                            <div class="rate">
                                <i data-star='0' class="fas fa-star stars starActive"></i>
                                <i data-star='1' class="fas fa-star stars starActive"></i>
