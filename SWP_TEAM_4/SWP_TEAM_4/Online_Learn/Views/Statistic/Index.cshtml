    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css//header.css" />
    <link rel="stylesheet" href="~/css/headerAdmin.css">
    <link rel="stylesheet" href="~/css/statistic.css">

</head>

<body>
    <div class="app">
        <div class="header">
            <a id="menu"><i class="fa fa-bars"></i></a>
            <div class="header_back">
                <a href="/Home">Back To Udemy</a>
            </div>
            <div class="header_logo">
                <h3>Dashboard</h3>
            </div>
            <div class="header_right-avt">
                <a href="/Account/Profile">@user.Username</a>
            </div>
        </div>
        <div id="chart"></div>
        <div class="my-statistic" id="sidenav">
            <ul class="statistic-list">
                <li class="statistic-item">
                    <a href="" id="revenue" class="statistic-item__link"><i class="fal fa-chart-line"></i>Revenue By Month</a>
                </li>
                <li class="statistic-item">
                    <a href="" id="bestSeller" class="statistic-item__link"><i class="fal fa-chart-line"></i>Top 5 Best Seller</a>
                </li>
                <li class="statistic-item">
                    <a href="" id="topUsers" class="statistic-item__link"><i class="fal fa-chart-line"></i>Top 5 Users</a>
                </li>
            </ul>
        </div>


    </div>
</body>
