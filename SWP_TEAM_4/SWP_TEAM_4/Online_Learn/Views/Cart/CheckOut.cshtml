<link rel="stylesheet" href="~/css/checkout.css" />



<div class="content container mb-5">
    <div class="row">
        <div class="col-7 checkout_left">
            <h1 style="font-weight: 400;">Checkout</h1>
            <div class="checkout_left-order">
                <h2 style="margin-bottom: 5%">Order Summary</h2>
                <ul class="order_list">
                    @foreach (var item in ViewBag.cart)
                    {
                        <li class="order_list-item">
                            <div class="order_list-item-img">
                                <img width="50" height="50"
                                     src="@item.Image" alt="">
                            </div>
                            <div class="order_list-item-title">
                                <span>
                                    @item.CourseName
                                </span>
                            </div>
                            <div class="order_list-item-price">$<span>@item.Price</span></div>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-5 checkout_right">
            <div class="checkout_right-order">
                <h2 style="margin-bottom: 5%">Summary</h2>
                <div class="checkout_right-order-price">
                    <div class="price-origin">
                        <span>Original price:</span>
                        <span>$<span>@ViewBag.price</span></span>
                    </div>
                    <div class="price-total">
                        <span>Total</span>
                        <span>$<span>@ViewBag.price</span></span>
                    </div>
                </div>
                <div class="checkout_right-order-btn">
                    <form action="/Cart/CheckOut" method="Post">
                        <input type="text" name="amount" value="@ViewBag.price" hidden />
                        <button>Complete Checkout</button>
                        <h5 style="color:red; margin-top:18px;">@ViewBag.err</h5>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

