<link rel="stylesheet" href="~/css/cart.css" />
<div class="styles--sc-wrapper--3ncS2">
    <div class="container">
        <div class="jumbotron-header-bar__inner">
            <div>
                <h1 data-purpose="shopping-cart-title">
                    <span class="font-heading-serif-xxxl">Shopping Cart</span>
                </h1>
            </div>
        </div>
    </div>
    <div>
        <div class="container">
            <div class="row">
                <!-- ***************COURSE IN CARD**************** -->
                <div class="col-md-9">
                    <h4 class="total-card">@(ViewBag.cart.Count) Courses in Cart</h4>
                    @foreach (var item in ViewBag.cart)
                    {
                        <div>
                            <div class="row" style="border: 1px solid #DDD; margin-left: 2px;">
                                <img class="col-md-2 img"
                                     src="@item.Image" alt=""></img>
                                <div class="col-md-6">
                                    <strong class="fontt">@item.CourseName</strong>
                                    <br>By mosh Hamedani, Passionate Software engineer
                                    <br><strong class="rating">4.5</strong>
                                    <div class="rate">
                                        <i data-star='0' class="fas fa-star stars starActive"></i>
                                        <i data-star='1' class="fas fa-star stars starActive"></i>
                                        <i data-star='2' class="fas fa-star stars starActive"></i>
                                        <i data-star='3' class="fas fa-star stars starActive"></i>
                                        <i data-star='4' class="fas fa-star stars starActive"></i>
                                    </div>
                                    (11269 ratings)
                                    <br>7.5 total hours • 79 lectures • Intermediate
                                </div>
                                <div class="col-md-2 action">
                                    <a href="/Cart/Remove?id=@item.CourseId" style="color: rgb(56, 0, 168);">Remove</a>
                                    <br><a href="#" style="color: rgb(56, 0, 168);">Save for Later</a>
                                    <br><a href="#" style="color: rgb(56, 0, 168);">Move to Wishlist</a>
                                </div>
                                <div class="col-md-2">
                                    <div class="price">
                                        <span>@item.Price $</span>
                                        <span>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                                 fill="currentColor" class="bi bi-tags-fill" viewBox="0 0 16 16">
                                                <path d="M2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586V2zm3.5 4a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z" />
                                                <path d="M1.293 7.793A1 1 0 0 1 1 7.086V2a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l.043-.043-7.457-7.457z" />
                                            </svg>
                                            <i class="bi bi-tags-fill"></i>
                                        </span>
                                    </div>
                                    <div class="old-price"><del></del></div>
                                </div>
                            </div>
                        </div>
                    }
                    <br><br>
                    <h4 class="total-card">Recently wishlisted</h4>
                    <div>
                        <div class="row" style="border: 1px solid #DDD; margin-left: 2px;">
                            <img class="col-md-2 img"
                                 src="@ViewBag.course_rcm.Image" alt=""></img>
                            <div class="col-md-6">
                                <strong class="fontt">@ViewBag.course_rcm.CourseName</strong>
                                <br>By Neil cummings, progestional freelance software developer
                                <br><strong class="rating">4.7</strong>
                                <div class="rate">
                                    <i data-star='0' class="fas fa-star stars starActive"></i>
                                    <i data-star='1' class="fas fa-star stars starActive"></i>
                                    <i data-star='2' class="fas fa-star stars starActive"></i>
                                    <i data-star='3' class="fas fa-star stars starActive"></i>
                                    <i data-star='4' class="fas fa-star stars starActive"></i>
                                </div>
                                <i class="bi bi-star-half"></i>
                                (7418 ratings)
                                <br>36.5 total hours • 315 lectures • Intermediate
                            </div>
                            <div class="col-md-2 action">
                                <a href="" style="color: rgb(56, 0, 168);">Remove</a>
                                <br><a href="" style="color: rgb(56, 0, 168);">Save for Later</a>
                                <br><a href="" style="color: rgb(56, 0, 168);">Move to Wishlist</a>
                            </div>
                            <div class="col-md-2">
                                <div class="price">
                                    <span>@ViewBag.course_rcm.Price $</span>
                                    <span>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                             fill="currentColor" class="bi bi-tags-fill" viewBox="0 0 16 16">
                                            <path d="M2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586V2zm3.5 4a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z" />
                                            <path d="M1.293 7.793A1 1 0 0 1 1 7.086V2a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l.043-.043-7.457-7.457z" />
                                        </svg>
                                        <i class="bi bi-tags-fill"></i>
                                    </span>
                                </div>
                                <div class="old-price"><del></del></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- *************** END COURSE IN CARD**************** -->
                <!-- ***************CHECK OUT**************** -->
                <div class="col-md-3">
                    <h4 class="total-card">Total:</h4>
                    <div class="total">@ViewBag.price $</div>
                    <div class="gia">
                        <del></del>
                        <div></div>
                    </div>
                    @if (ViewBag.cart.Count <= 0)
                    {
                        <a type="button" class="checkout">Checkout</a>
                    }
                    else
                    {
                        <a type="button" href="/Cart/CheckOut" class="checkout">Checkout</a>
                    }
                </div>
                <!-- ***************END CHECK OUT**************** -->
            </div>

            <br><br><br><br><br>
            <div>
                <h4 class="total-card">You might also like</h4>
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="row">
