@{
    ViewData["Title"] = "Exam";
    Layout = "";
    Result Result = ViewBag.Result;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="icon" type="image/x-icon" href="./assets/img/favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/footer.css">
    <link rel="stylesheet" href="~/css/ViewResult.css">
</head>

<body>

    <!--Header-->
    <div class="app">
        <div class="header px-4 d-flex justify-content-between align-items-center">
            <div class="header_left d-flex justify-content-between align-items-center">
                <div class="header_left-logo">
                    <a href=""><img src="./assets/img/Udemy_logo.svg" alt="" width="91" height="34" /></a>
                </div>
            </div>
            <div class="header_center">
                <span class="text-center">Title of Lesson</span>
                <span class="text-center"><span id="quiz_done"></span>/10</span>
            </div>
            <div class="header_right d-flex justify-content-end">
                <a href="/Home">Cancel</a>
            </div>
        </div>
        <div class="content" style="background-color: #f6f7fb;">
            <div class="result">
                <div class="result_info">
                    <div class="result_info-point">
                        <span class="">Your result</span>
                        <span class="">
                            @Result.CorrectAnswer/@ViewBag.totalQuestion
                            (@((double)Result.CorrectAnswer * 100/ViewBag.totalQuestion)%)
                        </span>
                    </div>
                    <div class="result_info-time">
                        <span>Time</span>
                        <span> @Result.Time Minutes</span>
                    </div>
                </div>
                <div class="result_status">
                    <span>You <span style="color: @(Result.Score >= 5 ? "green" :"red") ">@Result.Status</span> this exam</span>
                    <span>You got <span style="color: @(Result.Score >= 5 ? "green" :"red")">@Result.Score</span> point</span>
                </div>
                <div class="retest">
                    <a href="/Course/Learn/@ViewBag.courseId">Return Course</a>
                </div>
            </div>
        </div>

    </div>
    <!--Header end-->
    <!--Homepage-->
    <!--Footer End -->

</body>

</html>