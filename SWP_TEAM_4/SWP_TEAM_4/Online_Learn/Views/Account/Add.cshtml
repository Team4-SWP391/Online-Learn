@model Online_Learn.Models.Account
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/user_add.css" rel="stylesheet" />
<div class="container mt-5">
        <div class="row booo">
            <div class="col-md-8 booo2">
                <form asp-action="Add">
                    <div class="row">
                        <div class="col-md-6" style="margin-bottom: 30px;">
                            <label for="exampleFormControlTextarea1" class="form-label">
                                <h4 class="headtext">User name</h4>
                            </label>
                            <input asp-for="Username" class="form-control form-control-lg inputt" type="text" placeholder="TH"
                                aria-label=".form-control-lg example"/>
                        </div>
                        <div class="col-md-6">
                            <label for="exampleFormControlTextarea1" class="form-label">
                                <h4 class="headtext">Password</h4>
                            </label>
                            <input asp-for="Password" class="form-control form-control-lg inputt" type="text" placeholder="@@123456..."
                                aria-label=".form-control-lg example" />
                        </div>
                    </div>
                    <div style="margin-bottom: 30px;">
                        <label for="exampleFormControlTextarea1" class="form-label">
                            <h4 class="headtext">Full name</h4>
                        </label>
                        <input asp-for="FulllName" class="form-control form-control-lg inputt" type="text"
                            placeholder="Tung Hoang Nguyen"
                            aria-label=".form-control-lg example" />
                    </div>


                    <div style="margin-bottom: 10px;">
                        <label for="exampleFormControlTextarea1" class="form-label">
                            <h4 class="headtext">Gender</h4>
                        </label>
                        <br>

                       <input class="in_ra"  name="gender" type="radio" id="male" value="1" asp-for="Gender" checked>
                        <label class="label_radio la_ra" for="male">Male</label>
                         <input class="in_ra"  name="gender" type="radio" id="female" value="0" asp-for="Gender">
                        <label class="label_radio la_ra" for="female">Female</label>

                    </div>

                    <div style="margin-bottom: 30px;">
                        <label for="exampleFormControlTextarea1" class="form-label">
                            <h4 class="headtext">Phone</h4>
                        </label>
                        <input asp-for="Phone" class="form-control form-control-lg inputt" type="text" placeholder="0123456689"
                            aria-label=".form-control-lg example" />
                    </div>

                    <div style="margin-bottom: 30px;">
                        <label for="exampleFormControlTextarea1" class="form-label">
                            <h4 class="headtext">Address</h4>
                        </label>
                        <input asp-for="Address" class="form-control form-control-lg inputt" type="text" placeholder="Address"
                            aria-label=".form-control-lg example">
                    </div>
                    <div style="margin-bottom: 30px;">
                        <label for="" class="form-label">
                            <h4 class="headtext">Biography</h4>
                        </label>
                        <textarea asp-for="Desc" class="form-control inputt" style="border-radius: 30px;"
                            placeholder="Provide a detailed description of you" rows="8" ></textarea>
                    </div>


                    <div style="margin-bottom: 30px;">
                        <label for="exampleFormControlTextarea1" class="form-label">
                            <h4 class="headtext">Email</h4>
                        </label>
                        <input asp-for="Email" class="form-control form-control-lg inputt" type="text" placeholder="email@gmail.com"
                            aria-label=".form-control-lg example" value="">
                        <span style="color: rgb(159, 156, 156);">Your email for marketplace notification.</span>
                    </div>

                    <div style="margin-bottom: 30px;">
                        <label for="exampleFormControlTextarea1" class="form-label">
                            <h4 class="headtext">Role</h4>
                        </label>
                        <br>

                       <input class="in_ra"  name="roleid" type="radio" id="student" value="1">
                        <label class="label_radio la_ra" for="student">Student</label>
                    

                    
                        <input class="in_ra" name="roleid" type="radio" id="staff" value="2">
                        <label class="label_radio la_ra" for="staff">Staff</label>
                        

                        <input class="in_ra" name="roleid" type="radio" id="sale" value="3">
                        <label class="label_radio la_ra" for="sale">Marketing/Sale</label>
                    </div>

                    <div style="margin-bottom: 30px;">
                        <button type="submit" class="add_user">Add User</button>
                    </div>
                </form>
            </div>
            <div class="col-md-4 booo2">
                <label for="exampleFormControlTextarea1" class="form-label">
                    <h4 class="headtext">Add Profile</h4>
                </label>
                <p style="margin-top: 0px; color: rgb(125, 125, 125);">profile of at least Size 300 x 300</p>
                <p style="margin-top: 0px; color: rgb(125, 125, 125);">Gifs work too. Max 5mb</p>
                <div>
                    <img class="imgg" src="https://i.pinimg.com/736x/12/37/b3/1237b30268db9ee0c9cbe3a79b1ff8fa.jpg">
                    <a href="#">
